<% layout('layout/boilerplate') %>

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h2 class="text-center" my-4>Login</h2>
                <form action="/login" class="validated-form" method="post" novalidate>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" value="user@example.com" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" value="Qwert123" required>
                    </div>
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary me-4">Login</button>
                    </div>
                    <div class="text-center">
                        <div class="mt-2">
                            <a href="/google" class="btn btn-danger w-100">
                                <i class="fab fa-google"></i> Login With Google
                            </a>
                        </div>
                        <div class="mt-2">
                            <a href="/login/otp" class="btn btn-outline-dark w-100">
                                <i class="fas fa-envelope"></i> Login with One-Time Password
                            </a>
                        </div>
                        <div class="mt-3">
                            <small>Don't have an account? <a href="/signup" class="text-decoration-none">Sign up</a></small>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>